{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",

            "command": "clang",
            "args": [
                "-g",
                "-I.",
                "Main.c",
                "ListLib/List.c",
                "Solution/AddTwoLists/AddTwoLists.c",
                "Solution/MergeKLists/MergeKLists.c",
                "Solution/MergeSortedArray/MergeSortedArray.c",
                "Solution/IntegerToRoman/IntegerToRoman.c",
                "Solution/RemoveNthFromEnd/RemoveNthFromEnd.c",
                "Solution/DeleteDuplicates/DeleteDuplicates.c",
                "Solution/GetIntersectionNode/GetIntersectionNode.c",
                "-o",
                "Main"
            ],

            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "windows": {
                "command": "gcc",
                "args": [
                    "-g",
                    "-I.",
                    "Main.c",
                    "ListLib/List.c",
                    "Solution/AddTwoLists/AddTwoLists.c",
                    "Solution/MergeKLists/MergeKLists.c",
                    "Solution/MergeSortedArray/MergeSortedArray.c",
                    "Solution/IntegerToRoman/IntegerToRoman.c",
                    "Solution/RemoveNthFromEnd/RemoveNthFromEnd.c",
                    "Solution/DeleteDuplicates/DeleteDuplicates.c",
                    "Solution/GetIntersectionNode/GetIntersectionNode.c",
                    "-o",
                    "Main.exe"
                ]
            }
        },

        {
            "label": "build current file",
            "type": "shell",

            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],

            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },

            "windows": {
                "command": "gcc",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileBasenameNoExtension}.exe"
                ]
            }
        }
    ]
}
